<Window x:Class="Craps.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Craps Game" Height="300" Width="300" IsEnabled="True" Loaded="Window_Loaded">
    <Grid Background="Pink">
        <Button Height="23" HorizontalAlignment="Right" Margin="0,48.52,33,0" Name="buttonPlay" VerticalAlignment="Top" Width="75" Click="buttonPlay_Click">Play</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,33,95.52" Name="buttonRoll" VerticalAlignment="Bottom" Width="75" Click="buttonRoll_Click" IsEnabled="True">Roll</Button>
        <Label Height="28" Margin="30,0,0,21" Name="label1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="48">Result:</Label>
        <TextBox Height="25" Margin="94,0,33,21" Name="resultBox" VerticalAlignment="Bottom" />
        <TextBox Height="25" HorizontalAlignment="Left" Margin="30,48.52,0,0" Name="sumBox" VerticalAlignment="Top" Width="101" />
        <TextBox Height="25" HorizontalAlignment="Left" Margin="30,0,0,93" Name="rollBox" VerticalAlignment="Bottom" Width="101" />
    </Grid>
</Window>
